pipeline {
    agent { label 'linux' }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    stages {
        stage('Scan') {
            steps {
                withSonarQubeEnv(installationName: 'ahmed') {
                    // Solution 1: Commande standard
                    sh 'mvn clean verify sonar:sonar'
                    
                    // OU Solution 2: Si vous voulez utiliser le wrapper
                    // sh './mvnw clean verify sonar:sonar'
                }
            }
        }
    }
}